{
    "target": "main",
    "hosting": {
        "public": "public",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [{
                "source": "/user",
                "destination": "/index.html"
            },
            {
                "source": "/showcase/*",
                "destination": "/showcase.html"
            },
            {
                "source": "/user/*",
                "destination": "/showcase.html"
            }
        ]
    }
}